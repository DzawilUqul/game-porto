---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const gameProjects = await getCollection("game-projects");
const aiProjects = await getCollection("ai-projects");
const pageTitle = "Works";
---
<Layout pageTitle={pageTitle}>
    <!-- <div class="gif">
        <img width="300" height="259" alt="RaccoonLaptopGif" src="/laptop.webp"/>
    </div> -->
    <h2 class="center">Projects</h2>
    <h2>Game Dev</h2>
    <ul role="list" class="link-card-grid">
        {gameProjects.map((card) => <Card 
            url={`/projects/${card.slug}/`} 
            image={card.data.image.url} 
            title={card.data.title} 
            body={card.data.description}
        />)}
    </ul>
    <h2>AI Related</h2>
    <ul role="list" class="link-card-grid">
        {aiProjects.map((card) => <Card 
            url={`/projects/${card.slug}/`} 
            image={card.data.image.url} 
            title={card.data.title} 
            body={card.data.description}
        />)}
    </ul>
</Layout>

